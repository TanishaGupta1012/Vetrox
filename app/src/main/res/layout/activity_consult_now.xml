<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ConsultNowActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="70dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/croppedlogo"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consult with Expert"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"/>
    <Button
        android:id="@+id/poultry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Poultry"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/fish"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Fish"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/goat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Goat"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/dairy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Dairy"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/agriculture"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Agriculture"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        />

    <Button
        android:id="@+id/other"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:text="Other"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/callNow"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackground"
            android:text="Call Now"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/whatsApp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonbackground"
            android:text="Join WhatsApp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_margin="3dp"/>
    </LinearLayout>
</LinearLayout>